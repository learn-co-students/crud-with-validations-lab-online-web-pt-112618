<h1>Create a Song</h1>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>We got some errors</h2>
    <ul>
    <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    </ul>
    <% end %>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :released %>
  <span>: true or false</span>
  <%= f.text_field :released %>
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
  <%= f.label :artis_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.submit %>
<% end %>
