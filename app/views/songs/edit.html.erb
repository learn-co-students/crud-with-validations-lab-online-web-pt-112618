<h1>Edit Song</h1>
<% if @song.errors.any? %>
  <h2>There are some errors</h2>
  <% @song.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :released, "Song is released" %>
  <%= f.check_box :released %>
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.submit %>
<% end %>
